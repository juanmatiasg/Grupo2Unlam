<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation2"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.navigationdrawer.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_planner"
        android:name="com.example.navigationdrawer.ui.planner.PlannerFragment"
        android:label="navigation_planner"
        tools:layout="@layout/fragment_planner">
        <action
            android:id="@+id/action_navigation_planner_to_navigation_meal"
            app:destination="@id/navigation_meal" />
    </fragment>
    <fragment
        android:id="@+id/navigation_favourite"
        android:name="com.example.navigationdrawer.ui.favourite.FavouriteFragment"
        android:label="navigation_favourite"
        tools:layout="@layout/fragment_favourite" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.navigationdrawer.ui.profile.ProfileFragment"
        android:label="navigation_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_meal"
        android:name="com.example.navigationdrawer.ui.meal.MealFragment"
        tools:layout="@layout/fragment_meal"
        android:label="MealFragment" >
        <action
            android:id="@+id/action_navigation_meal_to_mealDetailFragment"
            app:destination="@id/mealDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealDetailFragment"
        android:name="com.example.navigationdrawer.ui.mealDetail.MealDetailFragment"
        android:label="fragment_meal_detail"
        tools:layout="@layout/fragment_meal_detail" />
</navigation>