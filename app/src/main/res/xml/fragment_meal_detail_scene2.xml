<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="219dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageView_MealDetail"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:id="@+id/imageView_MealDetail" />
        <Constraint
            android:layout_width="413dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/imageView_MealDetail"
            android:id="@+id/imageView3"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.757" />
        <Constraint
            android:layout_height="0dp"
            android:layout_width="420dp"
            android:id="@+id/constraintLayout"
            motion:layout_constraintTop_toTopOf="@+id/imageView3"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.333"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>
</MotionScene>